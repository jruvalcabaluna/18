<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

        <record model="ir.module.category" id="module_document_repse">
            <field name="name">REPSE</field>
            <field name="description">It help us to give the necesary permisions for repse docuemnt manage.</field>
            <field name="sequence">7</field>
        </record>

        <record id="group_repse_user" model="res.groups">
            <field name="name">Usuario</field>
            <field name="category_id" ref="module_document_repse" />
            <field name="comment">Users allowed to read and create repse documents from purchase orders.</field>
        </record>

        <record id="group_repse_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_document_repse" />
            <field name="comment">Users allowed to manage and configure repse.</field>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        </record>

        <record id="group_repse_portal" model="res.groups">
            <field name="name">Portal REPSE</field>
            <field name="category_id" ref="module_document_repse" />
            <field name="comment">Users allowed to upload files for repse on portal.</field>
        </record>

</odoo>
