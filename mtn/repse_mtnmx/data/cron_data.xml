<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

    <record forcecreate="True" id="ir_cron_repse" model="ir.cron">
        <field
            name="name"
        >Generación de registro para documentos mensuales (no actividad) y cuatrimestrales (icsoe y sisub)</field>
        <field ref="model_document_repse" name="model_id" />
        <field name="state">code</field>
        <field name="code">model.action_generate_auto_repse()</field>
        <field eval="True" name="active" />
